{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./build",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*"
      ]
  },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
